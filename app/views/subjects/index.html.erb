<p id="notice"><%= notice %></p>

<center>
<h1>Listing Subjects</h1></center>

<table    border="1" bordercolor=" #FFD700" width="10" align="center">
  <thead>
    <tr>
      <th>Subject code</th>
      <th>Subject title</th>
      <th>Subject ID </th>
      <th colspan="3">Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.subject_code %></td>
        <td><%= subject.subject_title %></td>
	<td><%= subject.id %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

