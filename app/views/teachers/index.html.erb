<p id="notice"><%= notice %></p>

<center>
<h1>Listing Teachers</h1></center>

<table  border="4" bordercolor=" #FFD700" align="center">
  <thead>
    <tr>
      <th>Teacher ID</th>
      <th>Name</th>
      <th colspan="3">Edit</th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
	<td><%= teacher.id %></td>
        <td><%= teacher.name %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path %>
